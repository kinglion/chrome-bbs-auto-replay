{
  "manifest_version": 2,

  "name": "UC-BBS auto reply",
  "description": "这是一个作弊的插件",
  "version": "1.0",
  "content_scripts": [
    {
      "js": [ "inject.js" ],
      "matches": [ "*://share.ucweb.local/discuz/*" ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "32": "icon32.png",
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
